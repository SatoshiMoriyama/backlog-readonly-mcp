{
  "name": "backlog-readonly-mcp-blog",
  "version": "1.0.0",
  "description": "backlog-readonly-mcpに関する技術ブログ記事の執筆・校正とコード検証のためのワークスペース",
  "main": "index.js",
  "scripts": {
    "lint": "markdownlint-cli2 blog_content/**/*.md && textlint blog_content/**/*.md",
    "lint:fix": "markdownlint-cli2 --fix blog_content/**/*.md && textlint --fix blog_content/**/*.md",
    "code:lint": "biome check packages/",
    "code:fix": "biome check --write packages/",
    "test": "pnpm -r test",
    "test:mcp": "pnpm --filter backlog-readonly-mcp test",
    "test:cdk": "pnpm --filter backlog-readonly-mcp-cdk test",
    "build": "pnpm -r build",
    "build:mcp": "pnpm --filter backlog-readonly-mcp build",
    "build:cdk": "pnpm --filter backlog-readonly-mcp-cdk build",
    "dev:mcp": "pnpm --filter backlog-readonly-mcp dev",
    "watch:cdk": "pnpm --filter backlog-readonly-mcp-cdk watch",
    "cdk:deploy": "pnpm --filter backlog-readonly-mcp-cdk deploy",
    "cdk:destroy": "pnpm --filter backlog-readonly-mcp-cdk destroy",
    "cdk:synth": "pnpm --filter backlog-readonly-mcp-cdk synth",
    "cdk:diff": "pnpm --filter backlog-readonly-mcp-cdk diff",
    "setup-blog": "node scripts/setup-blog.js",
    "prepare": "husky"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "packageManager": "pnpm@10.20.0",
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.10",
    "markdownlint-cli2": "^0.20.0",
    "textlint": "^15.5.0",
    "textlint-rule-preset-ja-spacing": "^2.4.3",
    "textlint-rule-preset-ja-technical-writing": "^12.0.2",
    "textlint-rule-preset-japanese": "^10.0.4",
    "textlint-rule-prh": "^6.1.0",
    "textlint-rule-spellcheck-tech-word": "^5.0.0"
  },
  "lint-staged": {
    "packages/**/*.{js,ts,jsx,tsx,json}": [
      "npm run code:lint"
    ],
    "blog_content/**/*.md": [
      "markdownlint-cli2",
      "textlint"
    ]
  }
}
