{
  "name": "backlog-readonly-mcp",
  "version": "0.1.0",
  "description": "Backlog読み取り専用MCPサーバー - Read-only MCP server for Backlog API",
  "bin": {
    "backlog-readonly-mcp": "./dist/index.js"
  },
  "files": [
    "dist/**/*",
    "README.md",
    ".backlog-mcp.env.example"
  ],
  "type": "module",
  "scripts": {
    "build": "npm run clean && tsc",
    "build:prod": "npm run clean && tsc --project tsconfig.prod.json",
    "clean": "rm -rf dist",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "test": "vitest --run",
    "test:watch": "vitest",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "inspector": "npx @modelcontextprotocol/inspector dist/index.js",
    "prepublishOnly": "npm run build:prod && npm test"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "backlog",
    "readonly",
    "read-only",
    "api",
    "nulab",
    "project-management",
    "issue-tracking",
    "ai-assistant",
    "claude",
    "kiro"
  ],
  "author": "SatoshiMoriyama",
  "license": "MIT",
  "homepage": "https://github.com/SatoshiMoriyama/backlog-readonly-mcp/tree/main/packages/backlog-readonly-mcp#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SatoshiMoriyama/backlog-readonly-mcp.git",
    "directory": "packages/backlog-readonly-mcp"
  },
  "bugs": {
    "url": "https://github.com/SatoshiMoriyama/backlog-readonly-mcp/issues"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.0",
    "axios": "^1.7.0",
    "dotenv": "^16.4.0"
  },
  "devDependencies": {
    "@modelcontextprotocol/inspector": "^0.18.0",
    "@types/node": "^22.0.0",
    "typescript": "^5.6.0",
    "vitest": "^2.0.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
